unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, VclTee.TeeGDIPlus,
  VCLTee.TeEngine, VCLTee.Series, Vcl.ExtCtrls, VCLTee.TeeProcs, VCLTee.Chart;

type
  TForm1 = class(TForm)
    Button1: TButton;
    Button2: TButton;
    Edit1: TEdit;
    Label1: TLabel;
    Edit2: TEdit;
    Label2: TLabel;
    Chart1: TChart;
    Series1: TPointSeries;
    Chart2: TChart;
    Series2: TPointSeries;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  flag: Boolean;
  n, iv, jv, t, r, h, v, temp, i1, j1: Integer;
  time, dr: Real;
  a, a0, rr: array [1 .. 31, 1 .. 31] of Integer;
  di: array [1 .. 4] of Integer = (-1, 0, 1, 0);
  dj: array [1 .. 4] of Integer = (0, 1, 0, -1);
  ver, hor: array [1 .. 10000] of Integer;

implementation

{$R *.dfm}

procedure init;
var
  i, j, k: Integer;
begin
  k := 0;

  for i := 1 to n do
    for j := 1 to n do
      begin
        //a0[i, j] := (i - 1) * n + j;
        a0[i, j] := k;
        k := k + 1;

        if i < n div 2 // Random < p
          then
            begin
              a[i, j] := 1;
              Form1.Series1.AddXY(i, j, '', clWhite); // A
            end
          else
            begin
              a[i, j] := 2;
              Form1.Series1.AddXY(i, j, '', clBlack); // B
            end;
      end;

  iv := 1;
  jv := 1;
  a[iv, jv] := 0;
  v := a0[iv, jv];
  Form1.Series1.AddXY(iv, jv, '', clRed); // Vacancy
end;

{function BC(ind: Integer): Integer;
begin
  BC := ind;
  if ind < 1
    then BC := ind + n;

  if ind > n
    then BC := ind - n;
end;}

procedure BC1(i, j: Integer);
begin
  i1 := i;
  j1 := j;
  if i < 1 then
    begin
      i1 := i + n;
      ver[a0[i, j]] := ver[a0[i, j]] - 1;
    end;

  if i > n then
    begin
      i1 := i - n;
      ver[a0[i, j]] := ver[a0[i, j]] + 1;
    end;

  if j < 1 then
    begin
      j1 := j + n;
      hor[a0[i, j]] := hor[a0[i, j]] - 1;
    end;

  if j > n then
    begin
      j1 := j - n;
      hor[a0[i, j]] := hor[a0[i, j]] + 1;
    end;
end;

procedure TForm1.Button1Click(Sender: TObject);
var
  i, j, i0, j0: Integer;
begin
  flag := True;

  Series1.Clear;
  Series2.Clear;

  for i := 1 to 10000 do
    begin
      ver[i] := 0;
      hor[i] := 0;
    end;

  time := StrToFloat(Edit1.Text);
  n := StrToInt(Edit2.Text);
  h := 1;

  init;

  t := 0;

  while flag and (t < time) do
    begin
      r := Random(4) + 1;

      //i := BC(iv + di[r]);
      //j := BC(jv + dj[r]);

      BC1(iv + di[r], jv + dj[r]);

      // Êîåô³ö³ºíò äèôóç³¿
      temp := a0[i1, j1];
      a0[i1, j1] := a0[iv, jv];
      a0[iv, jv] := temp;

      i0 := a0[i1, j1] div n + 1;
      j0 := a0[i1, j1] mod n + 1;

      for i := 1 to n do
        for j := 1 to n do
          rr[i, j] := sqr(h) * sqr(i0 - (i1 - ver[a0[i, j]])) + sqr(h) * sqr(j0 - (j1 - hor[a0[i, j]]));

      for i := 1 to n do
        for j := 1 to n do
          if a0[i, j] <> v then
            dr := dr + rr[i, j] / (sqr(n) - 1);

      Series2.AddXY(dr, t);

      a[iv, jv] := a[i1, j1];
      a[i1, j1] := 0;

      if a[iv, jv] = 1
        then Series1.AddXY(iv, jv, '', clWhite)
        else Series1.AddXY(iv, jv, '', clBlack);

      Series1.AddXY(i1, j1, '', clRed); // Vacancy
      Application.ProcessMessages;

      iv := i1;
      jv := j1;
      t := t + 1;
    end;
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
  flag := False;
end;

end.
